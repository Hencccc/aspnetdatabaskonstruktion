@{
    ViewData["Title"] = "Home Page";
}

<body>

    <div class="wrapper">
        <table>
            <tr class="top-row">
                @foreach (var column in ViewBag.ReindeerTable.Columns)
                {
                    <th>@column.ColumnName</th>
                }
            </tr>

            @foreach (var row in ViewBag.ReindeerTable.Rows)
            {
                <tr>
                    @for (int i = 0; i < ViewBag.ReindeerTable.Columns.Count; i++)
                    {
                        <td>@row[i]</td>
                    }
                </tr>
            }
        </table>

        <table>
            <tr class="top-row">
                @foreach (var column in ViewBag.FoodTable.Columns)
                {
                    <th>@column.ColumnName</th>
                }
            </tr>

            @foreach (var row in ViewBag.FoodTable.Rows)
            {
                <tr>
                    @for (int i = 0; i < ViewBag.FoodTable.Columns.Count; i++)
                    {
                        <td>@row[i]</td>
                    }
                </tr>
            }
        </table>
    </div>
</body>